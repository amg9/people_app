<h1><%= @person.full_name %></h1>
<p>age: <%= @person.age %></p>
<p>hair color: <%= @person.hair_color %></p>
<p>eye color: <%= @person.eye_color %></p>
<p>gender: <%= @person.gender %></p>
<p>alive: <%= @person.alive %></p>
<p>notes: 
  <% @notes.each do |note| %>
    <h2><%= note.body %><h2>
    <%= link_to "Show Note", note_path(note) %>
    <%= link_to "Edit Note", edit_note_path(note) %>
    <%= link_to 'Destroy Note', note, method: :delete %>
  <% end %> 
</p>
<p><%= link_to "New Note", new_note_path %></p>
<%= link_to "Back", people_path %>
